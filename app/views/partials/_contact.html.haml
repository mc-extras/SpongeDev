#contact.modal.fade{:role => "dialog", :tabindex => "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
          %span.sr-only Close
        %h4.modal-title{style: 'text-align: left;'} Contact Us
      = form_tag contact_path, method: 'post' do
        .modal-body{style: 'text-align: left;'}
          %p
            = label_tag 'Email:'
            = email_field :contact, :email, class: 'form-control', value: current_user ? current_user.email : ""
          %p
            = label_tag 'Username:'
            = text_field :contact, :username, class: 'form-control', value: current_user ? current_user.username : ""
          %p
            = label_tag 'Question:'
            = text_area :contact, :question, class: 'form-control', placeholder: "Enter your question here.", rows: 10
        .modal-footer
          = submit_tag 'Submit', class: 'btn btn-primary', data: { disable_with: "Sending..." }
          %button.btn.btn-danger{"data-dismiss" => "modal", :type => "button"} Close